<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:focusableInTouchMode="true"
    tools:context="com.twinkle.cdnubbs.ui.activity.WriteMessActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_wm_finsh"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="start|center"
            android:contentDescription="@string/next_step"
            android:src="@drawable/ic_close_black_48dp" />

        <com.loopj.android.image.SmartImageView
            android:id="@+id/siv_wm_header"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:src="@drawable/head" />

        <ImageView
            android:id="@+id/iv_wm_send"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end|center"
            android:contentDescription="@string/next_step"
            android:src="@drawable/ic_send_black_48dp" />
    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/crop__button_bar" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/et_wm_mess"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="start|top"
            android:hint="@string/text"
            android:inputType="textMultiLine"
            android:minHeight="200dp"
            android:padding="10dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_wm_local"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginStart="10dp"
                android:textColor="#113191"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:text="我在这儿！"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_wm_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="@color/crop__button_bar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <ImageView
                    android:id="@+id/iv_wm_choose_pic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:contentDescription="@string/text"
                    android:padding="3dp"
                    android:src="@drawable/choose_pic" />

                <ImageView
                    android:id="@+id/iv_wm_choose_topic"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="5dp"
                    android:contentDescription="@string/text"
                    android:padding="3dp"
                    android:src="@drawable/local" />

            </LinearLayout>


        </LinearLayout>
    </LinearLayout>

</LinearLayout>
